<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>smart.care.server.filters.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>smart.care.server.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardRouterController</servlet-name>
        <servlet-class>smart.care.server.controllers.DashboardRouterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardDoctorController</servlet-name>
        <servlet-class>smart.care.server.controllers.DashboardDoctorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClientController</servlet-name>
        <servlet-class>smart.care.server.controllers.ClientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>smart.care.server.controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookAppointmentController</servlet-name>
        <servlet-class>smart.care.server.controllers.BookAppointmentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveAppointment</servlet-name>
        <servlet-class>smart.care.server.controllers.RemoveAppointment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardPatientController</servlet-name>
        <servlet-class>smart.care.server.controllers.DashboardPatientController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardRouterController</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardDoctorController</servlet-name>
        <url-pattern>/doctor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientController</servlet-name>
        <url-pattern>/client</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookAppointmentController</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveAppointment</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardPatientController</servlet-name>
        <url-pattern>/patient</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
